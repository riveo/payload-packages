{
  "name": "@riveo/payload-purge-cache-plugin",
  "version": "1.0.0",
  "description": "Payload Purge Cache Plugin",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components": {
      "import": "./dist/exports/components.js",
      "types": "./dist/exports/components.d.ts"
    }
  },
  "files": ["dist"],
  "keywords": [
    "payload",
    "cms",
    "plugin",
    "typescript",
    "react",
    "template",
    "cache"
  ],
  "scripts": {
    "prebuild": "mkdir -p dist/components && cp src/components/styles.scss dist/components/styles.scss",
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier \"**/*.{cjs,js,ts,tsx,json,css}\" --write",
    "format:check": "prettier \"**/*.{cjs,mjs,js,ts,tsx,json,css,md}\" --check",
    "fix": "eslint . --fix && prettier \"**/*.{cjs,mjs,js,ts,tsx,json,css,md}\" --write",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "author": "Piotr Rzeczkowski <pr@riveolabs.com> (https://notesofdev.com/)",
  "peerDependencies": {
    "@payloadcms/next": "^3.0.0",
    "@payloadcms/ui": "^3.0.0",
    "next": "^15.0.0",
    "payload": "^3.0.0",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/node": "^22.5.4",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9.23.0",
    "eslint-config-next": "^15.2.3",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0"
  }
}
